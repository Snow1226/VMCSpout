<Window x:Class="VMCSpoutSettingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMCSpoutSettingWPF"
        mc:Ignorable="d"
        Title="VMCSpout Setting" Height="450" Width="600" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="MainCamera" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Label Content="   Spout Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="   Width     :" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="   Height    :" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" />

        <TextBox x:Name="MainCameraSpoutNameTextBox" Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch"  Margin="0,2,0,2"/>
        <TextBox x:Name="MainCameraWidthTextBox" Grid.Row="2" Grid.Column="1" VerticalAlignment="Stretch" Margin="0,2,0,2"/>
        <TextBox x:Name="MainCameraHeightTextBox" Grid.Row="3" Grid.Column="1" VerticalAlignment="Stretch"  Margin="0,2,0,2"/>

        <CheckBox x:Name="ScaleSyncCheckBox" Content="Scale Sync with VMC" Grid.Column="2" VerticalAlignment="Center" IsChecked="True"/>

        <DataGrid x:Name="SpoutDataGrid" Grid.Row="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" SelectionMode="Single" SelectionUnit="FullRow" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Spout Name" Binding="{Binding SpoutName}" Width="*"/>
                <DataGridTextColumn Header="VMCP Port" Binding="{Binding Port}" Width="*"/>
                <DataGridTextColumn Header="Width" Binding="{Binding OutputWidth}" Width="*"/>
                <DataGridTextColumn Header="Height" Binding="{Binding OutputHeight}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="ApplyButton" Content="Apply" Grid.Row="6" Grid.Column="2" Margin="2,2,2,2" Click="ApplyButton_Click" Width="120" HorizontalAlignment="Right"/>
    </Grid>
</Window>
